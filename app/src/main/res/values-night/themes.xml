<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- DARK MODE -->
    <style name="EDITTEXT">
        <item name="android:background">@color/cardbgcollight</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PICBG">
        <item name="android:background">#651F71</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#2C2C2C</item>
        <item name="cardBackgroundColor">@color/cardbgcoldark</item>
    </style>

    <!--roundimage-->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
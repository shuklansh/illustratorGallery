<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- LIGHT MODE -->
    <style name="EDITTEXT">
        <item name="android:background">@color/cardbgcoldark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PICBG">
        <item name="android:background">#000749</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#000</item>
        <item name="android:background">#E6CCFF</item>
        <item name="cardBackgroundColor">@color/cardbgcollight</item>
    </style>


    <!--roundimage-->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>